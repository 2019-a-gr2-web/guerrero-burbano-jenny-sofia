<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Document</title>
    <style>
        .separador {
            height: 10vh;
        }
    </style>
</head>
<body>
<div class="col-md-6 text-right">


</div>

<div class="col-md-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <legend class="">GESTIÓN DE LIBROS</legend>

        </div>
        <div class="panel-body">
            <form action="/api/autores/buscarHijos/<%= id%>" method="post">
                <div class="col-md-8">
                    <div class="input-group ">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                        <input  id="email" type="text" class="form-control" name="buscar" placeholder="Escriba aquí....">

                    </div>

                </div>

                <div class="col-md-2 ">


                    <button class="btn btn-info">Busqueda</button>


                </div>
            </form>
            <div class="col-md-2">
                <form method="post" action="/api/crearLibro">

                    <input type="hidden" name="id" class="form-control" id="Id" value=<%= id %>>
                    <button class="btn btn-success pull-right">Crear</button>
                </form>
            </div>
            <div class="col-md-12 separador"></div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ICBN</th>
                    <th>Nombre</th>
                    <th>Número de páginas</th>
                    <th>Edición</th>
                    <th>Fecha publicación</th>
                    <th>Nombre Editorial</th>

                </tr>
                <% arregloHijos.forEach((libro)=>{ %>
                    <tr>
                        <form action="/api/autores/actualizar" method="post">
                        <td><input type="text" name="ICBN" value="<%= libro.ICBN %>"></td>
                        <td><input type="text" name="nombre" value="<%= libro.nombre %>"></td>
                        <td><input type="text" name="numeroPaginas" value="<%= libro.numeroPaginas %>"></td>
                        <td><input type="text" name="edicion" value="<%= libro.edicion %>"></td>
                        <td><input type="text" name="fechaPublicacion" value="<%= libro.fechaPublicacion %>"></td>
                        <td><input type="text" name="nombreEditorial" value="<%= libro.nombreEditorial %>"></td>
                        <td><input type="hidden" name="autor" value="<%= id %>"></td>
                            <input type="hidden" name="id" value="<%= libro.id %>">
                            <td>
                                <button class="btn btn-info" type="submit">Editar</button>
                            </td>
                        </form>
                        <td>
                            <form action="/api/libros/eliminar"
                                  method="post">
                                <input type="number"  name="id" value="<%=libro.id%>" hidden >
                                <input type="hidden" name="idAutor" class="form-control" id="Id" value=<%= id %>>
                                <button class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>

                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>
</body>
</html>