<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Document</title>
    <style>
        .separador {
            height: 10vh;
        }
    </style>
</head>
<body>
<div class="col-md-6 text-right">


</div>
<div class="col-md-6 text-left">
    <legend class="col-md-6"><%= tempNombre %></legend>
    <form method="get" action="/api/salir">
        <button class="col-md-6 btn btn-danger">Salir</button>
    </form>
</div>
<div class="col-md-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <legend class="">GESTIÓN DE LIBROS</legend>

        </div>
        <div class="panel-body">
            <form action="/api/libros/encontrar" method="post">
                <div class="col-md-8">
                    <div class="input-group ">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                        <input  id="email" type="text" class="form-control" name="nombre" placeholder="Escriba aquí....">

                    </div>

                </div>
                <input type="hidden" name="id" class="form-control" id="Id"  value="<%= id %>">
                <div class="col-md-2 ">


                    <button class="btn btn-info">Busqueda</button>


                </div>
            </form>
            <div class="col-md-2">
                <form method="post" action="/api/crearLibro">

                    <input type="hidden" name="id" class="form-control" id="Id" value=<%= id %>>
                    <button class="btn btn-success pull-right">Crear</button>
                </form>
            </div>
            <div class="col-md-12 separador"></div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ICBN</th>
                    <th>Nombre</th>
                    <th>Número de páginas</th>
                    <th>Edición</th>
                    <th>Fecha publicación</th>
                    <th>Nombre Editorial</th>

                </tr>
                <% arregloHijos.forEach((libro)=>{ %>
                    <tr>
                        <td><%= libro.ICBN %></td>
                        <td><%= libro.nombre %></td>
                        <td><%= libro.numeroPaginas %></td>
                        <td><%= libro.edicion %></td>
                        <td><%= libro.fechaPublicacion %></td>
                        <td><%= libro.nombreEditorial %></td>
                        <td><%= libro.autorId %></td>

                        <td>
                            <form action="/api/libros/eliminar"
                                  method="post">
                                <input type="number"  name="id" value="<%=libro.id%>" hidden >
                                <input type="hidden" name="idAutor" class="form-control" id="Id" value=<%= id %>>
                                <button class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>

                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>
</body>
</html>