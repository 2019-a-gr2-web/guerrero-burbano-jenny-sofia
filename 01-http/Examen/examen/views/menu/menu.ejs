<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Document</title>
    <style>
      .encabezado{

      }
        .panel-body{
            height: 80vh;
            text-align-all: center;
        }
        .btnGestion{
            margin-top: 45%;
            margin-bottom: 25%;
            height: 14vh;
            width: 35vw;
        }
        .principal{
            height: 80px;
        }
    </style>
</head>
<body>
<div class="panel panel-default container encabezado">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ICBN</th>
            <th>Nombre</th>
            <th>Número de páginas</th>
            <th>Edición</th>
            <th>Fecha publicación</th>
            <th>Nombre Editorial</th>

        </tr>
        <% arregloHijos.forEach((libro)=>{ %>
            <tr>
                <td><%= libro.ICBN %></td>
                <td><%= libro.nombre %></td>
                <td><%= libro.numeroPaginas %></td>
                <td><%= libro.edicion %></td>
                <td><%= libro.fechaPublicacion %></td>
                <td><%= libro.nombreEditorial %></td>
                <td><%= libro.autorId %></td>

                <td>
                    <form action="/api/libros/eliminar"
                          method="post">
                        <input type="number"  name="id" value="<%=libro.id%>" hidden >
                        <input type="hidden" name="idAutor" class="form-control" id="Id" value=<%= id %>>
                        <button class="btn btn-danger">Eliminar</button>
                    </form>
                </td>

            </tr>
        <% }) %>
    </table>
</div>


</body>
</html>