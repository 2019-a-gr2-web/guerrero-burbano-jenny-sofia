<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Document</title>
    <style>
        #search {
            height: 50px;
        }
    </style>
</head>
<body>
<%- include('../componentes/menu/menu') %>
<div class="container">
    <div class="panel panel-info ">
        <div class="panel-heading">
            <legend>LISTA DE COMBOS</legend>
        </div>
        <div class="panel-body">
            <div class="col-md-10">
                <form action="/api/combo/buscar" method="post">
                    <div class="input-group">


                            <input id="search" type="text" class="form-control" name="nombre" placeholder="Búsqueda...">

                            <span class="input-group-addon"><i><button
                                            class=" submit btn btn-default  btn-sm glyphicon glyphicon-search"></button></i></span>

                    </div>
                </form>
            </div>
            <div class="col-md-2">
                <button class="btn btn-info" data-toggle="modal" data-target="#myModal">Nuevo</button>
            </div>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Opciones</th>
                </tr>
                </thead>
                <tbody>
                <% arregloCombos.forEach((plato)=>{ %>
                    <tr>
                        <form action="/api/combo/editar" method="post">

                            <td><input id="nombreId" type="text" class="form-control" name="nombre"
                                       value="<%= plato.nombre %>"></td>
                            <td><input id="descripcionId" type="text" class="form-control" name="descripcion"
                                       value="<%= plato.descripcion %>"></td>
                            <td><input id="precioId" type="text" class="form-control" name="precio"
                                       value="<%= plato.precio %>">
                                <input id="Id" type="hidden" class="form-control" name="id" value="<%= plato.id %>">
                            </td>

                            <td>
                                <button class="btn btn-info">Editar</button>
                            </td>
                        </form>
                        <form action="/api/combo/verCombo/<%= plato.id %>/<%= plato.nombre %>" method="get">
                            <td>

                                <button class="btn btn-infor">ver combo</button>
                            </td>
                        </form>
                        <td>
                            <form action="/api/combo/eliminar" method="post">
                                <input id="Id" type="hidden" class="form-control" name="id" value="<%= plato.id %>">
                                <button class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>

                    </tr>
                <% }) %>

                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content modal-info">
            <form action="/api/combo/crear" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Registro de combos</h4>
                </div>

                <div class="modal-body">

                    <div class="form-group">
                        <label for="usr">Nombre:</label>
                        <input type="text" name="nombre" class="form-control" id="usr">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Precio:</label>
                        <input type="number" placeholder="0.00" required  min="0" value="0" step="0.01" class="form-control" class="form-control" name="precio" id="pwd">
                    </div>
                    <div class="form-group">
                        <label for="comment">Descripción:</label>
                        <textarea class="form-control" rows="5" id="comment" name="descripcion"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-success">GUARDAR</button>
                </div>

            </form>
        </div>

    </div>
</div>


</body>
</html>
